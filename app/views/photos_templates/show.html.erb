<h1> Photo Details </h1>
<dl>
  <dt> Image </dt>
  <dd>
    <img src="<%= @the_photo.image %>">
  </dd>
  <dt> Caption </dt>
  <dd>
    <%= @the_photo.caption %>
  </dd>
  <dt> Owner </dt>
  <dd>
    <%= @the_photo.poster.username %>
  </dd>
  <dt> Posted </dt>
  <dd>
    <%= @the_photo.created_at %>
  </dd>
  <dt> Edit Photo </dt>
  <dd>
    <form action="/modify_photos/<%= @the_photo.id %>" method="post">
      <label for="img_box"> Image </label>
      <input id="img_box" name="this_image" type="text" value="<%= @the_photo.image %>">
      <label for="caption_box"> Caption </label>
      <textarea id="caption_box" name="this_caption" rows="2"><%= @the_photo.caption %></textarea>
      <button>
        Update photo
      </button>
    </form>
  </dd>
  <dt> Delete Photo </dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo.id %>"> Delete this photo</a>
  </dd>
</dl>

<h2> Comments </h2>

<table border="1">
  <tr>
    <th> Commenter </th>
    <th> Comment </th>
    <th> Posted </th>
  </tr>

  <% @the_photo.comments.each do |a_comment|%>
  <tr>
    <td> 
      <%= a_comment.commenter.username %> 
    </td>
    <td> 
      <%= a_comment.body %>
    </td>
    <td>
      <%= a_comment.created_at %> 
    </td>
  </tr>
  <% end %>
</table>

<h3> Add a new comment </h3>
<form action="/add_comment/<%= @the_photo.id %>" method="post">
  <label for="photo_id_box"> Photo ID </label>
  <input id="photo_id_box" name="this_photo_id" type="text" value="<%= @the_photo.id %>">
  <label for="author_id_box"> Author ID </label>
  <input id="author_id_box" name="this_author_id" type="text" value="Enter your author ID">
  <label for="comment_box"> Comment </label>
  <textarea id="comment_box" name="this_comment" rows="2" placeholder="Enter a comment..."></textarea>

  <button>Add comment </button>
</form>
